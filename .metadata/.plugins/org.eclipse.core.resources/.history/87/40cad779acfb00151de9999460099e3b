package data_structure;

import java.util.ListIterator;

public class Core_Linklist {
	
	
	public static void main(String[] args) {
		
		
		// TODO Auto-generated method stub

		MyLinklist l = new MyLinklist();
		
		l.add("String");
		l.add("boleen");
		l.add("int");
		l.addFirst("First");
		l.add("ww");
		l.add("one",1);
		
		
		System.out.println(l.Length());
		//ListIterator<String> i = l.listIterator();
		l.values();
		//System.out.println(l);
		
		
	}

}

class Node{
	Node next;
	Object data;
	Node()
	{
		
		
	}
	
	Node(Object datavalue)
	{
		next=null;
		data=datavalue;
	}
	Node(Object datavalue, Node node)
	{
		next=node;
		data=datavalue;

	}
	
	void setNext(Node node)
	{
		next=node;
	}
	Node getNext()
	{
		return next;
	}
	
	Object getValue()
	{
		return data;
	}
}

class MyLinklist{
	Node first;
	int pointer;
	
	MyLinklist()
	{
		//first=new Node();
		
		
	}
	
	void add(Object data)
	{
		if(first==null)
		{
			first=new Node(data);
			//System.out.print("1");
			pointer++;
			return;
		}
		
		Node temp=new Node(data);
		Node head=first;
		if(head!=null){
			
		
			while(head.getNext() != null)
			{
				head=head.getNext();
			}
			head.setNext(temp);
			pointer++;
		}
		
	}
	public void add(Object data, int index)
	{
		  if(index>1)
		  {
			  Node temp=new Node(data);
			  Node head=first;
			   for(int i=1;i<index;i++)
			   {
				   head=head.getNext();
			   }
			   
			   temp.setNext(head.getNext());
			   head.setNext(temp);
			   
		  }
		  if(index==1){
			  Node temp=new Node(data);
			  Node head=first;
			  first=temp;
			  temp.setNext(head);
		  }
	}

	public void addFirst(Object data)
	{
		Node temp=new Node(data);
		Node head= first;
		first=temp;
		first.setNext(head);
				pointer++;
	
	
	
	
	}
	public void values()
	{
		Node temp= first;
		while(temp!=null)
		{
			//System.out.println("1");
			System.out.println(temp.getValue());
			temp=temp.getNext();
		}
		
	}
	int Length()
	{
		return pointer;
	}
}
